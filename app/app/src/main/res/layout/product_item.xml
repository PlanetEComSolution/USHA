<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_bg"
            android:padding="10dp"
            android:src="@drawable/fan"
            android:scaleType="fitXY"
            android:visibility="visible"
          />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/txtvw_SKU"
                style="@style/smallTextViewStyle_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
android:textColor="@color/md_black_1000"
                android:text="sku" />

            <TextView
                android:id="@+id/txtvw_Description"
                style="@style/smallTextViewStyle_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:text="Desc" />


        </LinearLayout>

        <TextView
            android:id="@+id/text"
            style="@style/smallTextViewStyle_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Qty" />
        <LinearLayout
            android:id="@+id/ll_change_qnty"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_bgshape_cart"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtvw_minus_qnty"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="-"
android:gravity="left|center"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvw_variable_qnty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="1"

                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvw_plus_qnty"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="+"
android:gravity="right"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>
        <ImageView
            android:id="@+id/imgvw_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/delete" />

    </LinearLayout>

</LinearLayout>