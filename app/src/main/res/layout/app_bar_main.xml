<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="snap"


            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
android:gravity="top"

                android:background="@color/white">

                <ImageView
                    android:id="@+id/menuLeft"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/colorTxtBlack"
                    android:src="@drawable/ic_dehaze_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imgvw_cart"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:layout_width="25dp"
                            android:layout_height="20dp"

                            android:layout_gravity="top"
                            android:layout_marginTop="4dp"
                            android:tint="@color/md_grey_700"
                            app:srcCompat="@drawable/cart"

                            />
                        <Button
                            android:id="@+id/button_cartCount"
                            style="@style/smallTextViewStyle_white"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="top|right"
                            android:background="@drawable/btn_bg"
                            android:textSize="11sp"
                            android:text="0" />
                    </FrameLayout>
                </LinearLayout>



                <ImageView
                    android:id="@+id/imgvw_notification"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:tint="@color/md_grey_700"
                    android:layout_gravity="top"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/notification_32"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="1dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/profile_userimage"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/profile"
                        android:tint="@color/md_grey_700"
                        />

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rajesh"
                        android:padding="0dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/colorTxtGrey"

                        />
                </LinearLayout>




            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>