        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
    </style>
    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>
    <style name="largeTextViewStyle_grey" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorTxtGrey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Large</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#4CAF50</item>
        <!--<item name="colorControlActivated">#D53845</item>-->
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="largeTextViewStyle_white" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Large</item>
    </style>


    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/colorTxtBlack</item>
        <item name="android:textColorHint">@color/colorTxtGrey</item>


    </style>

    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>

    </style>


    <style name="BottomNavigationViewTextStyle">

        <item name="android:color">@color/md_grey_900</item>

    </style>

    <style name="BottomNavigationActiveViewTextStyle">

        <item name="android:color">@color/colorTxtGrey</item>

    </style>


    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">

    </style>


