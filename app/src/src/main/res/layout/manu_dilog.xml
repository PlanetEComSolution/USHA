<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:id="@+id/dilog"
    >
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   <LinearLayout
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_20"

    android:orientation="vertical">
   <ImageView
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:src="@drawable/dashboard"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:layout_below="@+id/car1"
       android:text="Dashboard"
       android:textColor="#000"
       android:textSize="14sp"

       android:textAlignment="center"
       />
   <ImageView
       android:id="@+id/car2"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/adminmodule"
        />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:layout_below="@+id/car2"
       android:text="Admin Module"
       android:textColor="#000"

       android:textSize="14sp"
       android:textAlignment="center" />
   <ImageView
       android:id="@+id/car3"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/productcatalogue"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/car3"
       android:text="Product Catalouge"
       android:textColor="#000"

       android:textSize="14sp"
       android:textAlignment="center" />

   <ImageView
       android:id="@+id/car4"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/stockstatus"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/car4"
       android:text="Stock Status"
       android:textColor="#000"
       android:textSize="14sp"
       android:textAlignment="center" />
   <ImageView
       android:id="@id/car5"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/order"
       android:layout_centerHorizontal="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:layout_below="@+id/car5"
       android:text="Orders"
       android:textColor="#000"

       android:textSize="14sp"
       android:textAlignment="center" />
   <ImageView
       android:id="@+id/car6"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/report"
       android:layout_centerHorizontal="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/car6"
       android:text="Reports"
       android:textColor="#000"
       android:textSize="14sp"

       android:textAlignment="center" />
   <ImageView
       android:id="@id/car5"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/accountstatement"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/car5"
       android:text="Account Statement"
       android:textColor="#000"

       android:textSize="14sp"
       android:textAlignment="center" />
   <ImageView
       android:id="@+id/Payment"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/payment"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/Payment"
       android:text="Payment"
       android:textColor="#000"
       android:textSize="14sp"

       android:textAlignment="center" />
   <ImageView
       android:id="@id/car5"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/download"
       android:layout_centerHorizontal="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/car5"
       android:text="Download"
       android:textColor="#000"

       android:textSize="14sp"
       android:textAlignment="center" />
   <ImageView
       android:id="@+id/Claim"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_marginTop="10dp"
       android:background="@drawable/claim"
       android:layout_centerHorizontal="true" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/Claim"
       android:text="Claim"
       android:textColor="#000"
       android:textSize="14sp"

       android:textAlignment="center" />

</LinearLayout>


   </ScrollView>

</LinearLayout>